---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Statistics from "../components/Statistics.astro";
import TrustBar from "../components/TrustBar.astro";
import Expertise from "../components/Expertise.astro";
import IndustriesServed from "../components/IndustriesServed.astro";
import Services from "../components/Services.astro";
import ServiceSchedule from "../components/ServiceSchedule.astro";
import PricingPlans from "../components/PricingPlans.astro";
import SuccessStories from "../components/SuccessStories.astro";
import AntiPortfolio from "../components/AntiPortfolio.astro";
import FAQ from "../components/FAQ.astro";
import { siteData } from "../data/siteData";
---

<Layout
  title={`${siteData.name} - ${siteData.tagline}`}
  description={siteData.description}
>
  <Hero />
  <!--  <Statistics /> -->
  <TrustBar />
  <Services />
  <IndustriesServed />
  <Expertise />
  <ServiceSchedule />
  <PricingPlans />
  <!-- <SuccessStories /> -->
  <AntiPortfolio />
  <FAQ />

  <!-- CTA Section -->
  <section
    class="py-20 bg-linear-to-r from-burnt-orange-500 to-burnt-orange-600"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Ready to Transform Your Business?
      </h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Join other high-value businesses who are already on their growth journey
      </p>
      <a
        href="/contact"
        class="inline-flex items-center justify-center gap-3 bg-white hover:bg-gray-200 px-8 py-4 rounded-lg font-bold text-lg transition-all transform hover:scale-105 shadow-lg"
      >
        Get Started Today
        <i class="ri-arrow-right-line"></i>
      </a>
    </div>
  </section>
</Layout>
