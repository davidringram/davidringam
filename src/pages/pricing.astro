  <!-- Payment Options Section -->
  <section class="py-20 bg-loam-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-12 text-center">
        Payment Options
      </h2>
      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto mb-12"
      >
        {
          paymentOptions.plans.map((plan) => (
            <div class="bg-dusty-olive-800 p-6 rounded-xl border border-dusty-olive-600 text-center hover:border-brand-orange transition-all">
              <h3 class="text-2xl font-bold text-white mb-3">{plan.type}</h3>
              <p class="text-gray-300 leading-relaxed">{plan.description}</p>
            </div>
          ))
        }
      </div>

      <div class="max-w-4xl mx-auto">
        <div
          class="bg-dusty-olive-900 p-8 rounded-xl border border-dusty-olive-600 mb-8"
