---
import { Image } from "astro:assets";
import { brands } from "../data/siteData";
---

<section
  id="statistics"
  class="py-20 bg-linear-to-br from-brand-loam via-brand-loam to-brand-loam"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-brand-olive mb-4">
        I've Worked With Cool Brands
      </h2>
      <p class="text-xl text-brand-bone max-w-2xl mx-auto">
        Let's grow your business
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
      {
        brands.map((brand) => (
          <div class="group bg-loam-950/50 backdrop-blur-sm p-4 rounded-xl border-2 border-brand-coyote/40 text-center transition-all duration-500 transform hover:scale-105 hover:border-brand-orange">
            <div class="h-24 w-full flex items-center justify-center mx-auto mb-6 transition-transform duration-500 group-hover:scale-110">
              <Image
                src={brand.logoUrl}
                alt={`${brand.name} logo`}
            /* ADDED: opacity-40 and brightness-75 to tame the white logos */
            class="max-h-full max-w-full object-contain grayscale opacity-40 brightness-75 group-hover:grayscale-0 group-hover:opacity-100 group-hover:brightness-100 transition-all duration-500"
          />
            </div>

            <div class="text-l font-bold text-brand-olive group-hover:text-brand-orange transition-colors duration-300">
              {brand.name}
            </div>

            <div class="text-brand-bone/60 text-xs md:text-xs mt-1 uppercase tracking-wider font-medium">
              {brand.vertical}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
