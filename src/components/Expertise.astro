---
import { expertise } from "../data/siteData";
---

<section id="expertise" class="py-20 bg-loam-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-bone-200 mb-4">
        Expertise
      </h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Everything you need to achieve your marketing goals
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        expertise.map((feature) => (
          <div class="bg-secondary p-8 rounded-xl border border-border-primary hover:border-border-accent transition-all transform hover:scale-105">
            <div class="w-16 h-16 bg-brand-orange/10 rounded-lg flex items-center justify-center mb-6">
              <i class={`${feature.icon} text-4xl text-brand-orange`} />
            </div>
            <h3 class="text-2xl font-bold text-white mb-3">{feature.title}</h3>
            <p class="text-gray-400 leading-relaxed">{feature.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
