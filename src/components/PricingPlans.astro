---
import { pricingPlans } from "../data/siteData";

interface Props {
  showHeading?: boolean;
}

const { showHeading = true } = Astro.props;
---

<section id="pricing" class="py-20 bg-loam-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {
      showHeading && (
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-dusty-olive-300 mb-4">
            Membership Plans
          </h2>
          <p class="text-xl text-bone-300 max-w-2xl mx-auto">
            Choose the plan that fits your fitness journey
          </p>
        </div>
      )
    }
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {
        pricingPlans.map((plan) => (
          <div
            class={`bg-dusty-olive-900 p-8 rounded-xl border-2 ${
              plan.popular
                ? "border-brand-orange transform scale-105 shadow-lg shadow-brand-orange/20"
                : "border-dusty-olive-600"
            } hover:border-brand-orange transition-all`}
          >
            {plan.popular && (
              <div class="bg-brand-orange text-white text-sm font-bold px-4 py-1 rounded-full inline-block mb-4">
                Most Popular
              </div>
            )}
            <h3 class="text-2xl font-bold text-white mb-2">{plan.name}</h3>
            <div class="mb-6">
              <span class="text-4xl font-bold text-white">{plan.price}</span>
              <span class="text-bone-400">{plan.period}</span>
            </div>
            <ul class="space-y-4 mb-8">
              {plan.features.map((feature) => (
                <li class="flex items-start text-bone-100 gap-3">
                  <i class="ri-checkbox-circle-fill text-brand-orange text-xl shrink-0 mt-0.5" />
                  <span class="leading-relaxed">{feature}</span>
                </li>
              ))}
            </ul>
            <a
              href="/contact"
              class={`w-full px-8 py-4 rounded-lg font-bold text-lg transition-all flex items-center justify-center gap-3 ${
                plan.popular
                  ? "bg-brand-orange hover:bg-brand-orange text-white"
                  : "bg-dusty-olive-800 hover:bg-dusty-olive-600 text-white border border-dusty-olive-600"
              }`}
            >
              Get Started
              <i class="ri-arrow-right-line" />
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
