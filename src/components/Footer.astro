---
import {
  siteData,
  navigation,
  socialLinks,
  contactInfo,
} from "../data/siteData";
---

<footer class="bg-bg-primary border-t border-border-primary">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- About Section -->
      <div>
        <h3 class="text-2xl font-bold text-text-primary mb-4">
          {siteData.name}
        </h3>
        <p class="text-text-secondary mb-4">{siteData.description}</p>
        <div class="flex space-x-4">
          {
            socialLinks.map((social) => (
              <a
                href={
                  siteData.social[social.name as keyof typeof siteData.social]
                }
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-secondary hover:bg-primary text-text-secondary hover:text-text-primary rounded-lg flex items-center justify-center transition-all"
                aria-label={social.label}
              >
                <i class={`${social.icon} text-xl`} />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold text-text-primary mb-4">
          Quick Links
        </h4>
        <ul class="space-y-2">
          {
            navigation.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-text-secondary hover:text-primary transition-colors"
                >
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="text-lg font-semibold text-text-primary mb-4">Contact Us</h4>
        <ul class="space-y-4 text-text-secondary">
          {
            contactInfo.slice(0, 3).map((info) => (
              <li class="flex items-start gap-3">
                <i class={`${info.icon} text-primary text-xl mt-1 shrink-0`} />
                {info.link ? (
                  <a
                    href={info.link}
                    class="hover:text-primary transition-colors leading-relaxed"
                  >
                    {info.content}
                  </a>
                ) : (
                  <span class="leading-relaxed">{info.content}</span>
                )}
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Newsletter -->
      <div>
        <h4 class="text-lg font-semibold text-text-primary mb-4">Newsletter</h4>
        <p class="text-text-secondary mb-4">
          Subscribe to get fitness tips and updates
        </p>
        <form class="flex flex-col space-y-2">
          <input
            type="email"
            placeholder="Your email"
            class="px-4 py-2 bg-secondary border border-border-primary rounded-lg text-text-primary placeholder-text-muted focus:outline-none focus:border-border-accent"
          />
          <button
            type="submit"
            class="bg-primary hover:bg-primary-hover text-white px-4 py-2 rounded-lg font-semibold transition-colors"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <div
      class="border-t border-border-primary mt-8 pt-8 text-center text-text-secondary"
    >
      <p>
        &copy; {new Date().getFullYear()}
        {siteData.name}. All rights reserved.
      </p>
    </div>
  </div>
</footer>
