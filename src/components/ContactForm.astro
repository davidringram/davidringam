<form
  id="contact-form"
  class="bg-dusty-olive-900 p-8 rounded-xl border border-dusty-olive-500 space-y-6"
>
  <div>
    <label for="name" class="block text-white font-semibold mb-2">
      Full Name
    </label>
    <input
      type="text"
      id="name"
      name="name"
      required
      class="w-full px-4 py-3 bg-dusty-olive-800 border border-dusty-olive-500 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-brand-orange transition-colors"
      placeholder="John Doe"
    />
  </div>

  <div>
    <label for="email" class="block text-white font-semibold mb-2">
      Email Address
    </label>
    <input
      type="email"
      id="email"
      name="email"
      required
      class="w-full px-4 py-3 bg-dusty-olive-800 border border-dusty-olive-500 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-brand-orange transition-colors"
      placeholder="john@example.com"
    />
  </div>

  <div>
    <label for="phone" class="block text-white font-semibold mb-2">
      Phone Number
    </label>
    <input
      type="tel"
      id="phone"
      name="phone"
      class="w-full px-4 py-3 bg-dusty-olive-800 border border-dusty-olive-500 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-brand-orange transition-colors"
      placeholder="+1 (555) 123-4567"
    />
  </div>

  <div class="hidden" style="display:none;">
    <label for="b_field">Don't fill this out if you're human</label>
    <input
      type="text"
      name="b_field"
      id="b_field"
      tabindex="-1"
      autocomplete="off"
    />
  </div>

  <div>
    <label for="message" class="block text-white font-semibold mb-2">
      Message
    </label>
    <textarea
      id="message"
      name="message"
      rows="5"
      required
      class="w-full px-4 py-3 bg-dusty-olive-800 border border-dusty-olive-500 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-brand-orange transition-colors resize-none"
      placeholder="Tell us about your fitness goals..."></textarea>
  </div>

  <button
    type="submit"
    class="w-full bg-brand-orange hover:bg-brand-orange text-white px-8 py-4 rounded-lg font-bold text-lg transition-all transform hover:scale-105 flex items-center justify-center gap-3"
  >
    Send Message
    <i class="ri-send-plane-line"></i>
  </button>
</form>

<script>
  // 1. Import the toast function
  import { toast } from "sonner";

  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("contact-form");
    // ... (rest of your setup code) ...

    if (!form) return;

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      // 2. Show a "Loading" toast
      const toastId = toast.loading("Sending message...");

      const formData = new FormData(form as HTMLFormElement);
      const data = Object.fromEntries(formData);

      try {
        const response = await fetch("/api/send-email", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          // 3. Update toast to Success
          toast.success("Message sent successfully!", {
            id: toastId, // Updates the existing loading toast
            description: "We'll get back to you shortly.",
          });
          (form as HTMLFormElement).reset();
        } else {
          throw new Error("Failed");
        }
      } catch (error) {
        // 4. Update toast to Error
        toast.error("Failed to send message", {
          id: toastId,
          description: "Please try again later.",
        });
        console.error(error);
      }
    });
  });
</script>
