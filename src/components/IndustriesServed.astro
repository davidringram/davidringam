---
import { Image } from "astro:assets";
import { industries } from "../data/siteData";
---

<section id="industries" class="py-20 bg-dusty-olive-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-coyote-300 mb-4">
        Industries Served
      </h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        We have exceptional knowledge about a wide range of industries, and we
        are confident that we can help you achieve your goals.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        industries.map((facility) => (
          <div class="group bg-dusty-olive-950 rounded-xl overflow-hidden border border-dusty-olive-500 hover:border-burnt-orange-500 transition-all transform hover:scale-105">
            <div class="relative h-64 overflow-hidden">
              <Image
                src={facility.image}
                alt={facility.title}
                width={800}
                height={600}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-linear-to-t from-slate-900/80 to-transparent" />
              <div class="absolute bottom-4 left-4 right-4">
                <h3 class="text-2xl font-bold text-white mb-2">
                  {facility.title}
                </h3>
              </div>
            </div>
            <div class="p-6">
              <p class="text-gray-400 leading-relaxed">
                {facility.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
