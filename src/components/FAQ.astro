---
import { faqs } from "../data/siteData";
---

<section id="faq" class="py-20 bg-loam-900">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-bone-200 mb-4">
        Frequently Asked Questions
      </h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Everything you need to know about David R. Ingram
      </p>
    </div>

    <div class="space-y-4">
      {
        faqs.map((faq, index) => (
          <details class="faq-item bg-loam-950 rounded-xl border border-dusty-olive-700 hover:border-brand-orange transition-all">
            <summary class="flex items-center justify-between p-6 cursor-pointer list-none">
              <h3 class="text-xl font-bold text-white pr-4">{faq.question}</h3>
              <i class="faq-icon ri-arrow-down-s-line text-2xl text-brand-orange transition-transform shrink-0" />
            </summary>
            <div class="px-6 pb-6">
              <p class="text-gray-300 leading-relaxed">{faq.answer}</p>
            </div>
          </details>
        ))
      }
    </div>

    <div class="text-center mt-12">
      <p class="text-gray-400 mb-4">Still have questions?</p>
      <a
        href="/contact"
        class="inline-flex items-center gap-3 bg-brand-orange hover:bg-brand-orange/80 text-white px-8 py-4 rounded-lg font-bold text-lg transition-all transform hover:scale-105"
      >
        Contact Us
        <i class="ri-arrow-right-line"></i>
      </a>
    </div>
  </div>
</section>

<style>
  details summary::-webkit-details-marker {
    display: none;
  }

  .faq-item[open] .faq-icon {
    transform: rotate(180deg);
  }
</style>
