---
import { Image } from "astro:assets";
import { siteData } from "@data/siteData";
import HeroImage from "@assets/dri-hero.jpg";
---

<section
  class="relative min-h-screen flex items-center justify-center bg-linear-to-br from-loam-900 via-loam-950 to-coyote-900 pt-20 overflow-hidden"
>
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10 pointer-events-none">
    <div
      class="absolute inset-0"
      style="background-image: url('/assets/topography.svg'); background-size: cover; background-position: center; opacity: 0.25;"
    >
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="text-center lg:text-left">
        <h1
          class="text-5xl md:text-6xl lg:text-7xl font-bold text-brand-bone mb-6 leading-tight"
        >
          {siteData.tagline}
        </h1>
        <p class="text-xl md:text-2xl text-coyote-200 mb-8 leading-relaxed">
          {siteData.description}
        </p>
        <div
          class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center lg:justify-start mb-12"
        >
          <a
            href="/contact"
            class="bg-brand-olive hover:bg-dusty-olive-600 text-white px-8 py-4 rounded-lg font-bold text-lg transition-all transform inline-flex items-center justify-center gap-3"
          >
            Contact David
            <i class="ri-arrow-right-line"></i>
          </a>
          <a
            href="/about"
            class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-bg-primary px-8 py-4 rounded-lg font-bold text-lg transition-all inline-flex items-center justify-center gap-3"
          >
            About David
            <i class="ri-information-line"></i>
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-6 max-w-lg mx-auto lg:mx-0">
          <div class="text-center lg:text-left">
            <div class="text-4xl md:text-5xl font-bold text-coyote-200 mb-2">
              15+
            </div>
            <div class="text-brand-orange text-sm md:text-base">
              Years Experience
            </div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-4xl md:text-5xl font-bold text-coyote-200 mb-2">
              100+
            </div>
            <div class="text-brand-orange text-sm md:text-base">
              Happy Clients
            </div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-4xl md:text-5xl font-bold text-coyote-200 mb-2">
              99%
            </div>
            <div class="text-brand-orange text-sm md:text-base">
              Client Satisfaction
            </div>
          </div>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="hidden lg:block">
        <div class="relative">
          <div
            class="aspect-square rounded-2xl overflow-hidden bg-bg-secondary border-2 border-border-primary shadow-2xl"
          >
            <Image
              src={HeroImage}
              alt="Fitness training"
              width={800}
              height={800}
              class="w-full h-full object-cover"
              loading="eager"
            />
          </div>
          <div
            class="absolute -bottom-6 -left-6 bg-primary p-6 rounded-xl shadow-xl"
          >
            <div class="flex items-center gap-3">
              <div
                class="w-12 h-12 bg-white rounded-lg flex items-center justify-center"
              >
                <i class="ri-trophy-line text-2xl text-primary"></i>
              </div>
              <div>
                <div class="text-white font-bold text-lg">Marketing Expert</div>
                <div class="text-white/80 text-sm">Branding Expert</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce hidden lg:block"
  >
    <i class="ri-arrow-down-line text-2xl text-text-primary"></i>
  </div>
</section>
